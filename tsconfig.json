{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"target": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"module": "node16",
		"types": ["node"]
	},
	"include": ["src/**/*", ".env"],
	"exclude": ["node_modules"]
}